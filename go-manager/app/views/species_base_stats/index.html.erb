<p id="notice"><%= notice %></p>

<h1>Species Base Stats</h1>

<table>
  <thead>
    <tr>
      <th>Species No</th>
      <th>Species name</th>
      <th>Base attack</th>
      <th>Base defense</th>
      <th>Base stamina</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @species_base_stats.each do |species_base_stat| %>
      <tr>
        <td><%= species_base_stat.species.species_no %></td>
        <td><%= species_base_stat.species.name %></td>
        <td><%= species_base_stat.base_attack %></td>
        <td><%= species_base_stat.base_defense %></td>
        <td><%= species_base_stat.base_stamina %></td>
        <td><%= link_to 'Show', species_base_stat %></td>
        <td><%= link_to 'Edit', edit_species_base_stat_path(species_base_stat) %></td>
        <td><%= link_to 'Destroy', species_base_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

